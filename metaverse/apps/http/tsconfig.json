{
  "compilerOptions": {
    "target": "es2016",
    /* Modules */
    "rootDir": "../..",
    "module": "NodeNext",
    "moduleDetection": "force",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@repo/types": ["../../packages/types/src"]
    }
  }
}
